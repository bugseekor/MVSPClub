<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>MVSPDisplayBooksServlet</servlet-name>
        <servlet-class>club.admin.MVSPDisplayBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MVSPAddBookServlet</servlet-name>
        <servlet-class>club.admin.MVSPAddBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MVSPLoanServlet</servlet-name>
        <servlet-class>club.cart.MVSPLoanServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MVSPCartServlet</servlet-name>
        <servlet-class>club.cart.MVSPCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MVSPClearCartServlet</servlet-name>
        <servlet-class>club.cart.MVSPClearCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MVSPDisplayBooksServlet</servlet-name>
        <url-pattern>/MVSPDisplayBooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MVSPAddBookServlet</servlet-name>
        <url-pattern>/MVSPAddBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MVSPLoanServlet</servlet-name>
        <url-pattern>/MVSPLoan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MVSPCartServlet</servlet-name>
        <url-pattern>/MVSPCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MVSPClearCartServlet</servlet-name>
        <url-pattern>/MVSPClearCart</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>MVSPIndex.jsp</welcome-file>
    </welcome-file-list>
</web-app>
